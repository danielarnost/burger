





<div class ="container">
  <div class ="row text-center">
    

    <img id='burgpic' src='./assets/img/burger.jpg' style="margin-top:5%;">
    </div>
    <br>
    
    <div class ="row">

      <div class="col-sm-4" id ="col1">
      <h2 style ="margin-left:50px;">Burgers</h2>

      <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li class="list-unstyled">
           {{this.burger_name}}
           <div class ="burgers">
             <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
             <input type="hidden" name="devoured" value="false">
             <button type="submit">Devour!</button>
             </form>
           </div>          
          </li>
        {{/unless}}
      {{/each}}
      </ul>
      </div>

      <div class="col-sm-4">

      <h2 style ="margin-left:50px;">Eat-Dat-Burger!</h2>
      <h2 class="text-center">Add a burger</h2>
      <form action="burgers/create" method="POST">

          <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burger" name="name">    
          </div>

          <div class="form-group">
          <label for="finished"> Is it devoured? </label><br>
          <input type="radio" name="finished" value="1"> Devoured <br>
          <input type="radio" name="finished" value="0"> Not Devoured<br>

          <button type="submit" id="add">Add burger</button>
      </form>

          </div>
    </div>

      <div class="col-sm-4" id ="col3">
      <h2>Devoured Burgers</h2>

      <ul class="list-unstyled">
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="burgers/update/?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="{{this.id}}">
             </form>
          </li>
        {{/if}}
      {{/each}}
      </ul>
      </div>

    </div>
</div>




